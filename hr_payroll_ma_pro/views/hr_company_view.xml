<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="res_company_form_l10n_ma" model="ir.ui.view">
            <field name="name">res.company.form.l10n.ma</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
			 <data>
             <xpath expr="//notebook" position="inside">
			 <page name="Maroc_paie" string="Taux Cnss/cimr/mutuelle">
                             <group>
   	
                               <field name="taux_bol"/> 
	<table class="table table-bordered"  style="width:75;" attrs="{'invisible': [('taux_bol', '=', False)]}">
	<TR>
		<TH bgcolor="#e4ec94" colspan="8">Tableau des taux CNSS </TH></TR>
		
	<TR><TH colspan="4" >Rubrique</TH><TH colspan="4">Taux/Montant</TH></TR>				
	<TR><TH colspan="4" >Plafond de sécurité sociale</TH><TD colspan="4"><field name="plafond_secu"/></TD></TR>
	<TR><TH colspan="4" >Taux cotisation cnss patronale</TH><TD colspan="4"><field name="t_pat"/></TD></TR>
	<TR><TH colspan="4" >Taux cotisation cnss salariale</TH><TD colspan="4"><field name="t_sal"/></TD></TR>
	<TR><TH colspan="4" >Taux cotisation amo patronale</TH><TD colspan="4"><field name="tamo_pat"/></TD></TR>	
	<TR><TH colspan="4" >Taux participation amo patronale</TH><TD colspan="4"><field name="tamopar_pat"/></TD></TR>	
	<TR><TH colspan="4" >Taux cotisation amo salariale</TH><TD colspan="4"><field name="tamo_sal"/></TD></TR>	
	<TR><TH colspan="4" >Taux allocation familale</TH><TD colspan="4"><field name="t_alloc"/></TD></TR>
	<TR><TH colspan="4" >Taux frais professionnels</TH><TD colspan="4"><field name="t_formpro"/></TD></TR>
	<TR><TH colspan="4" >Taux déduction formation professionnelle</TH><TD colspan="4"><field name="t_ded_formpro"/></TD></TR>
	<TR><TH colspan="4" >Code déduction formation professionnelle </TH><TD colspan="4"><field name="code_formpro"/></TD></TR>	
	
	</table>

				    </group>	

					</page> 	
			 <page name="Maroc_paie1" string="Données juridiques">							
							<group colspan="4" col="6">
								
						
                            <field name="days"/>							 
                            <field name="hours"/>								
                            <field name="smig"/>	
							<field name="n_af_cimr"/>
							<field name="af_mutu"/>
							<field name="org_ss"/>
						<field name="policeat"/>
						 </group>
							<newline/>

					    <group colspan="4" col="6">
							<field name="nom"/>					
							<field name="prenom"/>
							<field name="numeroCIN" />
							<field name="patente"/>
							<field name="idfiscal"/>
                            <field name="formeJ"/>							
                            <field name="capital"/>	
                        </group><br/>							
                        <group colspan="4" col="6">
							<field name="commune1"/>	
							<field name="numeroCE"/>
							<field name="numeroRC"/>
							<field name="identifiantTP"/>
							<field name="ice"/>
							<newline/>
						
						</group>
                   
                 
				  </page>

					
							<page name="sign" string="Responsables et signataires">				
					<group colspan="4" col="6">
								
                            <field name="signataire"/>							 
                            <field name="fonc_signat"/>								
                        	
							<newline/>
						</group>	
				</page>	
					
					
				  </xpath> 
     </data>
            </field>
        </record>
		

</odoo>
