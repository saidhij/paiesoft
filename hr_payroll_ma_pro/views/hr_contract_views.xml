<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <!-- Contract View -->
    <record id="hr_contract_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
		

			
        <xpath expr="//field[@name='job_id']" position="before">
            <field name="company_id" groups="base.group_multi_company"/>
        <field name="currency_id" invisible="1"/>
            </xpath>
        
				

		 

				<xpath expr="//field[@name='date_start']" position="before">
				<field name="type_ctr" string="Type de contrat"/>
				<field name="situation" string="Situation cnss"/>
				<field name="anciennete" string="Ancienneté (an)"/>
				 </xpath>
				 
				 <xpath expr="//field[@name='wage_type']" position="replace">
            <field name="mode_pay" string="Type de salaire" required="1"/>
        </xpath>
				 
				<xpath expr="//field[@name='wage']" position="replace">
			
				<field  name="wage" string="Salaire de base mensuel " attrs="{'invisible': [('mode_pay', '!=', 'monthly')]}"/>
				<field  name="wageh" string="Salaire de base horaire " attrs="{'invisible': [('mode_pay', '!=', 'hourly')]}"/></xpath>
		
				<xpath expr="//label[@for='wage']" position="before">
				
                <field name="payment_mode"/>	
		
				 </xpath>   

			    <notebook>
				
		<page string="Contrat CDD /Occas/Stagiaires" attrs="{'invisible': [('type_ctr', '=', 'CDI')]}">
		     <group >
				<field name="type_ctr"/>
	
                <field name="date_start" string="Date de début du contrat"/>	
                <field name="profession" string="Profession"/>
				<field name="contract_end" string="Date fin de contrat"/>
				<field name="motif" string="Motif de départ"/>
				<field name="duration" string="Durée du contrat en jours"/>
							 
				 </group>
				  </page>

                </notebook>
				
				<notebook>
                <page string="Primes et indemnités" name="Primes_n_t" >
				
             <field name="prime_bol"/> 
			<table class="table table-bordered"  style="width:100%;" attrs="{'invisible': [('prime_bol', '=', False)]}">
	<TR>
		<TH bgcolor="#e4ec94" colspan="16">Indemnités destinées à couvrir des frais engagés dans l'exercice de la fonction ou de l'emploi</TH></TR>
		
	<TR><TH colspan="4" >Indemnité </TH><TH colspan="4">Montant</TH><TH colspan="4">code</TH><TH colspan="4">note</TH></TR>				
	<TR><TH colspan="4" >Indemnité de déplacement et frais de déplacement accordée sur la base de pièces justificatives</TH><TD colspan="4"><field name="indem_depl"/></TD><TD colspan="4"><field name="indem_depl_code"/></TD><TD colspan="4"><field name="indem_depl_note"/></TD></TR>
	<TR><TH colspan="4" >Indemnité de déplacement et frais de déplacement accordée sur une base forfaitaire pour des déplacements ponctuels</TH><TD colspan="4"><field name="indem_depl2"/></TD><TD colspan="4"><field name="indem_depl2_code"/></TD><TD colspan="4"><field name="indem_depl2_note"/></TD></TR>
	<TR><TH colspan="4" >Indemnité de déplacement et frais de déplacement accordée sur une base forfaitaire pour des déplacements réguliers</TH><TD colspan="4"><field name="indem_depl3"/></TD><TD colspan="4"><field name="indem_depl3_code"/></TD><TD colspan="4"><field name="indem_depl3_note"/></TD></TR>
	<TR><TH colspan="4" >Indemnité kilométrique</TH><TD colspan="4"><field name="indem_kilo"/></TD><TD colspan="4"><field name="indem_kilo_code"/></TD><TD colspan="4"><field name="indem_kilo_note"/></TD></TR>
	<TR><TH colspan="4" >Indemnité de transport du domicile vers le lieu de travail - périmètre urbain</TH><TD colspan="4"><field name="indem_transp"/></TD><TD colspan="4"><field name="indem_transp_code"/></TD><TD colspan="4"><field name="indem_transp_note"/></TD></TR>
	<TR><TH colspan="4" >Indemnité de transport du domicile vers le lieu de travail - en dehors du périmètre urbain</TH><TD colspan="4"><field name="indem_transp2"/></TD><TD colspan="4"><field name="indem_transp2_code"/></TD><TD colspan="4"><field name="indem_transp2_note"/></TD></TR>
    <TR><TH colspan="4" >Prime de tournée </TH><TD colspan="4"><field name="prime_tourn"/></TD><TD colspan="4"><field name="prime_tourn_code"/></TD><TD colspan="4"><field name="prime_tourn_note"/></TD></TR>
	<TR><TH colspan="4" >Indemnité de caisse</TH><TD colspan="4"><field name="indem_caisse"/></TD><TD colspan="4"><field name="indem_caisse_code"/></TD><TD colspan="4"><field name="indem_caisse_note"/></TD></TR>
	<TR><TH colspan="4" >Indemnité de représentation</TH><TD colspan="4"><field name="prime_repr"/></TD><TD colspan="4"><field name="prime_repr_code"/></TD><TD colspan="4"><field name="prime_repr_note"/></TD></TR>
    <TR><TH colspan="4" >Prime d'outillage</TH><TD colspan="4"><field name="prime_outil"/></TD><TD colspan="4"><field name="prime_outil_code"/></TD><TD colspan="4"><field name="prime_outil_note"/></TD></TR>
	<TR><TH colspan="4" >Prime de salissure</TH><TD colspan="4"><field name="prime_saliss"/></TD><TD colspan="4"><field name="prime_saliss_code"/></TD><TD colspan="4"><field name="prime_saliss_note"/></TD></TR>
    <TR><TH colspan="4" >Indemnité de lait</TH><TD colspan="4"><field name="indem_lait"/></TD><TD colspan="4"><field name="indem_lait_code"/></TD><TD colspan="4"><field name="indem_lait_note"/></TD></TR>
    <TR><TH colspan="4" >Prime de panier ou de casse - croute</TH><TD colspan="4"><field name="prime_panier"/></TD><TD colspan="4"><field name="prime_panier_code"/></TD><TD colspan="4"><field name="prime_panier_note"/></TD></TR>

	<TR><TH colspan="4" >Gratifications sociales liées à un évènement familial</TH><TD colspan="4"><field name="gratif_sociale"/></TD><TD colspan="4"><field name="gratif_sociale_code"/></TD><TD colspan="4"><field name="gratif_sociale_note"/></TD></TR>
	<TR><TH colspan="4" >Prime de voyage à la Mecque pour le pèlerinage</TH><TD colspan="4"><field name="prime_haj"/></TD><TD colspan="4"><field name="prime_haj_code"/></TD><TD colspan="4"><field name="prime_haj_note"/></TD></TR>
    <TR><TH colspan="4" >Aide médicale</TH><TD colspan="4"><field name="aide_medicale"/></TD><TD colspan="4"><field name="aide_medicale_code"/></TD><TD colspan="4"><field name="aide_medicale_note"/></TD></TR>
    <TR><TH colspan="4" >Indemnité de licenciement</TH><TD colspan="4"><field name="indem_licen"/></TD><TD colspan="4"><field name="indem_licen_code"/></TD><TD colspan="4"><field name="indem_licen_note"/></TD></TR>	
    <TR><TH colspan="4" >Autres Primes Exonérées</TH><TD colspan="4"><field name="prime_ntax"/></TD><TD colspan="4"><field name="prime_ntax_code"/></TD><TD colspan="4"><field name="prime_ntax_note"/></TD></TR>		
			
</table> 
				    	   

					<group name="Primes_taxables" attrs="{'invisible': [('prime_bol', '=', False)]}" string="Autres Primes et indemnités Mensuelles " colspan="4" col="6">
                    <field name="prime_rend"/> 
                    <field name="prime_encad"/>
                    <field name="prime_nuit"/>
                    <field name="prime_tax"/>
                    <field name="com"/>
			        </group>
				
		
					 
					 <group name="taux" attrs="{'invisible': [('prime_bol', '=', False)]}" string="Primes Annuelles " colspan="4" col="6">
					<field name="prime_ann"/>
					<field name="prime_bilan"/>
					<field name="prime_annut"/>
					
					</group>
					</page>
                </notebook>
				<notebook>
   
                </notebook>
				<notebook>
					
		
	           <page string=" Autres données de la paie" name="information">
                           
               
          <group string="Horaires /Heures sup./Absence" colspan="4" col="6" >
                              <field name="hours" />
                                <field name="days" />
								<field name="jours_t" />
                                <field name="leave" /> 
								 <field name="cpris" /> 
                                 <field name="crest" /> 
								
								 <field name="absence"/>
								 </group>
				  
					</page>				
					
				 </notebook>
				

				
         
            </field>
			
        </record>
			
 <record id="hr_contract_kanban_inherit" model="ir.ui.view">
            <field name="name">hr.contract.view.kanban.inherit</field>
            <field name="model">hr.contract</field>
          <field name="inherit_id" ref="hr_contract.hr_contract_view_kanban"/>			
            <field name="arch" type="xml">
			
			
			<xpath expr="//field[@name='name']" position="after">
                <p><span>Début du contrat: <field name="date_start"/></span></p>			
                <p><span>Fin du contrat: <field name="contract_end"/></span></p>
				 <p><span>Nom: <field name="employee_id"/></span></p>
			</xpath>
            </field>
				
         </record>			
			
			


</odoo>