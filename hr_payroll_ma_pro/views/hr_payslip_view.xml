<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>


		
		 <record id="hr_payslip_ma_tree" model="ir.ui.view">
            <field name="name">hr.payslip.ma.tree</field>
            <field name="model">hr.payslip</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
            <field name="arch" type="xml">
        
                 <xpath expr="//field[@name='basic_wage']" position="replace">
                     <field name="gross_wage" string="Salaire brut" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                 </xpath>
           
            </field>
        </record>
		
			
		
		

    </data>
</odoo>