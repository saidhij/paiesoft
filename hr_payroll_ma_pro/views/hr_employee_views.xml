<?xml version="1.0" encoding="utf-8"?>
<odoo>

<data>

<record id="hr_employee_form_l10n_ma_payroll" model="ir.ui.view">
            <field name="name">hr.employee.form.l10n.ma_payroll</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

		    <xpath expr="//field[@name='name']" position="before">
                         <group>
                             <field name="last_name"/> 
							 <field name="first_name"/>
                             <field name="code2"/> 
                    </group>
					</xpath>
					<xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="placeholder">Prénom et Nom</attribute>
                </xpath>
				 
				 <xpath expr="//field[@name='job_id']" position="after">
                 <field name="diplome" string="Type de diplôme"/>
                 </xpath>

                    <xpath expr="//field[@name='birthday']" position="after">
                        <field name="age"/>
					   <field name="titre"/>
                    </xpath> 

				 <xpath expr="//field[@name='identification_id']" position="replace">
                 <field name="cin" string="N de Carte Nationale CIN"/>
                 </xpath> 
				 <data>
		
				<notebook>
				<page string="Num.d'affiliation" groups="hr.group_hr_user">
				
                     <group colspan="4" col="3"> 
				
                   
				   <field name="matricule_cnss"/>
				   <field name="numppr"/>
				   <field name="numcee"/>			   
				   <field name="ifu"/> 
	
				    </group> 
							  				
                            </page>
							</notebook>
							
					<notebook>

							</notebook>	
<notebook>
				<page string="Avance sur salaire du mois">
                    <group colspan="4" col="3">
					<field name="avance" string="Avance sur salaire"  />
					</group>
			  				
                </page>
				
				<page string="Gestion de présence du mois">
				
				
				
				
				 <separator string="* Importer les heures travaillés avec un fichier  xls ou saisir manuellement *" style="color: black"/><separator/>

				<separator string=".........................................." style="color: red"/>
                    <group colspan="6" col="2">
					<field name="presence_impor"/>
					</group>
				<separator string=".........................................." style="color: red"/>
					<span>Mode choisi pour cet employé au niveau du contrat est :<strong> <field name="mode_pay"/></strong></span>
				<separator/>
                <group attrs="{'invisible': [('presence_impor', '=', True)]}">
				
				<table class="table table-bordered"  style="width:65%;" attrs="{'invisible': [('mode_pay', '=', 'monthly')]}">
				<TR><TH bgcolor="#e4ec94" colspan="8">Saisir la présence: cas horaire </TH></TR>
	            <TR><TH colspan="4" >Type</TH><TH colspan="4">Quantité</TH></TR>				
	            <TR><TH colspan="4" >Heures travaillées durant le mois</TH><TD colspan="4"><field name="hrs_trav_cemois"/></TD></TR>
	            <TR><TH colspan="4" >Jours travaillés(calculé)</TH><TD colspan="4"><field name="jrs_trav_cemois"/></TD></TR>
	            </table>

				<separator/>
				<table class="table table-bordered"  style="width:65%;" attrs="{'invisible': [('mode_pay', '=', 'hourly')]}">
				<TR><TH bgcolor="#e4ec94" colspan="12">Saisir la présence: cas mensuel </TH></TR>
	            <TR><TH colspan="4" >Type</TH><TH colspan="4">Quantité</TH><TH colspan="4">Horaire Légal</TH></TR>				
	            <TR><TH colspan="4" >Heures travaillées durant le mois</TH><TD colspan="4"><field name="hrs_trav_cemois_m"/></TD><TD colspan="4"><field name="heures_t"/></TD></TR>
	            <TR><TH colspan="4" >Jours travaillés</TH><TD colspan="4"><field name="jrs_trav_cemois_m"/></TD><TD colspan="4"><field name="jours_t"/></TD></TR>
	            </table>				
                </group>
				<separator/>
					
						<table class="table table-bordered"  style="width:65%;">
	<TR>
		<TH bgcolor="#e4ec94" colspan="8">Saisir les heures sup. du mois </TH></TR>
		
	<TR><TH colspan="4" >Type</TH><TH colspan="4">Quantité</TH></TR>				
	<TR><TH colspan="4" >Heures sup. à 25 %</TH><TD colspan="4"><field name="heure_25"/></TD></TR>
	<TR><TH colspan="4" >Heures sup. à 50 %</TH><TD colspan="4"><field name="heure_50"/></TD></TR>
	<TR><TH colspan="4" >Heures sup. à 100 %</TH><TD colspan="4"><field name="heure_100"/></TD></TR>

	</table>
					

					
                </page>				
							
							
			</notebook>								
						
			</data>
				
			</field>
		</record>
		
	

</data></odoo>

